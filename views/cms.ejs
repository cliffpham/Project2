		<div class="row">
			<div class="col-md-6 offset-md-3">
				<form id="cms">
					<div class="form-group" >
						<label for="title" >Title:</label>
						<input placeholder="Title" type="text" class="form-control" id="title" style="width:100%" >
						<br />
						<label for="body">Body:</label>
						<textarea placeholder="Tell me your story..." class="form-control" rows="8" id="body"></textarea>
					
						<label for="tags">Tag:</label>
						<textarea placeholder='Type in or click buttons below to add tags ' class="form-control" rows="2" id="tags"></textarea>
						<div id='addTag'>Tags used by others: </div>
						<br />
						<div class="form-group">
							<label for="category">Select Author:</label>
							<select class="custom-select" id="author">
  						</select>
						</div>
						<br />
							<div class='row'>
							<div class="col-md-6">
								<label for="image">ImageURL:</label>
								<input placeholder="Put URL of image here" type="text" class="form-control" id="image" style="width:100%">
								<br />
								<br />
								<button type="submit" class="btn btn-success submit float-left">Submit (w/url) </button>
							</div>

								<div class="col-md-6">
									<form style="width:100%">
										<div class="form-group imageUpload" style="width:100%">
												<label for="userImageFile" class="submit-label">Upload Image <span id="uploadStatus"> (upload could take a moment)</span></label>
												<input type="file" class="form-control text-left " id="userImageFile" onfocus="this.placeholder = ''" placeholder="Please select a file">
												<small id="fileHelp" class="form-text text-light"> (JPEG, PNG, GIF, BMP)</small>
										</div>
										<button type="submit" class="btn btn-secondary submit-button" id="upload">Upload Image</button>
								</form>
								</div>

						</div>
					</div>
							</div>
						</div>
						
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Custom Script -->
	<script src="js/cms.js" type="text/javascript"></script>

	<script src="https://www.gstatic.com/firebasejs/4.13.0/firebase.js"></script>  

</body>

</html>
